Converts number grades into letter grades.
Â© 2016 MICHELLE BLUM ALL RIGHTS RESERVED
*/

#include <iostream>
using namespace std;

const int SIZE = 10;

void enter();
void compare(int[]);
void score(int[], int);
void display(int[], char[]);

int main()
{
    enter();
    return 0;
}

void enter()
{
    int grade[SIZE];
    for(int i = 0; i < SIZE; i++)
    {
        cout << "Grade #" << (i+1) << ": ";
        cin >> grade[i];
        while (grade[i] < 0 || grade[i] > 100)
        {
            cout << "Enter a valid score for student #" << (i+1) << ": \n";
            cin >> grade[i];
        }
    }
    compare(grade);
}

void compare(int rank[])
{
    int highest = rank[0];
    
    for (int i = 1; i < SIZE; i++)
    {
        if(rank[i] > highest)
        {
            highest = rank[i];
        }
    }
    score(rank, highest);
}

void score(int number[SIZE], int best)
{
    char letter[SIZE];
    for (int i = 0; i < SIZE; i++)
    {
        if (number[i] >= (best-10))
        {
            letter[i] = 'A';
        }
        else if (number[i] >= (best-20))
        {
            letter[i] = 'B';
        }
        else if (number[i] >= (best-30))
        {
            letter[i] = 'C';
        }
        else if (number[i] >= (best-40))
        {
            letter[i] = 'D';
        }
        else
        {
            letter[i] = 'F';
        }
    }
    display(number, letter);
}

void display(int notConverted[SIZE], char converted[SIZE])
{
    for (int i= 0; i < SIZE; i++)
    {
        cout << "Student " << (i+1) << " scored a " << notConverted[i] << " which is a " << converted[i] << endl;
    }
}
