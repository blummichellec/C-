#include <iostream>
using namespace std;

int main()
{
    cout << "Prime Numbers: \n";
    
    for (int n = 3; n <= 100; n++)
    {
        for (int i = 2; i < n; i++)
        {
            if (n % i == 0)
                break;
            else
            {
                if (i == (n-1))
                    cout << n << endl;
            }
        }
    }
    
    return 0;
}

//Version 2
bool isPrime(int number)
{
	bool isPrime = true;
	for (int i = 3; i <= sqrt(number); i++) // only checking from 3 to sqrt(number)
	{
		if (number % i == 0)
		{
			isPrime = false;
			break;
		}
	}
	return isPrime;
}
