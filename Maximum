#include <iostream>
using namespace std;

double max(double x, double y);
double max(double x, double y, double z);

int main()
{
    cout << "Max Value: " << max(7.4, 3.2) << endl;
    cout << "Max Value: " << max(8.86, 10.0, 2.1) << endl;
    
    return 0;
}

double max(double x, double y)
{
    if (x > y)
        return x;
    else
        return y;
}

double max(double x, double y, double z)
{
    if ((x > y) && (x > z))
        return x;
    else if ((y > x) && (y > z))
        return y;
    else
        return z;
}
