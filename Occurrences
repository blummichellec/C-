#include <iostream>
using namespace std;

const int SIZE = 10;

void enter();
void counter(int[]);
void printOccurances(int, int);

int main()
{
    enter();
    return 0;
}

void enter()
{
    int arr[SIZE];
    
    cout << "Enter 10 integers between 0 and 99: ";
    
    for(int i = 0; i < SIZE; i++)
        cin >> arr[i];
    
    counter(arr);
}

void counter(int arr[SIZE])
{
    int compare[100],
        count = 0;;
    for(int i = 0; i < 100; i++)
    {
        compare[i] = i;
    }
    for(int i = 0; i < 100; i++)
    {
        for(int j = 0; j < SIZE; j++)
            if(arr[j] == compare[i])
            {
                count++;
            }
        if(count > 0)
        {
            printOccurances(count, i);
            count = 0;
        }
    }
}

void printOccurances(int count, int i)
{
    cout << i << " occurs " << count << " time(s) \n";
}
